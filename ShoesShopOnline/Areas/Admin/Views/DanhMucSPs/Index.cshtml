@model IEnumerable<ShoesShopOnline.Models.DanhMucSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section script{
    <script src="~/Areas/Admin/Assets/JS/DanhMuc.js"></script>
}
<p>
    @*@Html.ActionLink("Thêm danh mục", "Create")*@
    <a class="btn ThemMoi" href="~/Admin/DanhMucSPs/Create">Thêm danh mục</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên danh mục
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="row-@item.MaDM">
            <td>
                @Html.DisplayFor(modelItem => item.TenDanhMuc)
            </td>
            <td >
                @*@Html.ActionLink("Xóa", "Delete", new { id = item.MaDM })*@
                @*<button type="button" class="btn btn-primary" onclick="deletedata(@item.MaDM)">
                        open modal
                    </button>*@
                <button class="btn btnDelete ThemMoi Crud" dataname="@item.MaDM">Xóa</button>
            </td>
        </tr>
    }
</table>
