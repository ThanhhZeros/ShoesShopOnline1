<h2>Danh sách sản phẩm</h2>
@using (Html.BeginForm())
{
    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        <button style="background-color: black; border-radius: 8px;width:100px">@Html.ActionLink("Thêm mới", "Create")</button>
    <div style="float:right">
        Tìm sản phẩm: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input class="ThemMoi" type="submit" value="Tìm" />
    </div>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Tên sản phẩm", "Index", new { sortOrder = ViewBag.SapTheoTen, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Ảnh
        </th>
        <th>
            @Html.ActionLink("Giá bán", "Index", new { sortOrder = ViewBag.SapTheoGia, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Danh mục
        </th>
        <th>
            Ngày cập nhật
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="row-@item.MaSP">
            <td style="width:20%">
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @{
                    string ImagePath = "~/wwwroot/Images/" + item.Anh;
                }
                <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaDM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySua)
            </td>
            <td>
                <a class="ThemMoi Crud" href="~/Admin/SanPhams/Edit/@item.MaSP">Sửa</a>|
                <a class="ThemMoi Crud" href="~/Admin/SanPhams/Details/@item.MaSP">Chi tiết</a>|
                @*@Html.ActionLink("Sửa", "Edit", new { id = Model.M}) |
                    @Html.ActionLink("Xem chi tiết", "Edit", new { id = Model.MaSP }) |*@
                <a class=" btnDelete ThemMoi Crud" dataname="@item.MaSP">Xóa</a>
                @*<button class="btn btn-primary btnDelete" dataname="@item.MaSP">Xóa</button>*@
            </td>
            
        </tr>
    }

</table>
    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new
    {
        page,
        sortOrder = ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
    }))


