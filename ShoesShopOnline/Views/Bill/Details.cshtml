@model List<ShoesShopOnline.Models.CartItem>
@{
    ViewBag.Title = "Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    Decimal tongtien = 0;
    ShoesShopOnline.Models.HoaDon hoadon = ViewBag.HoaDon;
}
@section jsFooter{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
}
<style>
    * {
    font-family: Arial, Helvetica, sans-serif;
}

.header-left ul li a {
    font-size: 15px;
}

.h_menu4 ul li a {
    font-size: 15px;
}

.search {
    font-size: 14px;
}

a h3 span {
    font-size: 14px;
}

.header .header-top .container {
    padding: 0 6%;
}

.head-top {
    padding: 0 6%;
}

.footer {
    padding: 0 9%;
    font-size: 15px;
}

#update {
    background-color: orangered;
    color: white;
    font-size: 15px;
    padding: 5px 10px;
}

#update:hover {
        background-color: black;
        color: white;
    }
#menucon{
        margin:5px;
        background-color:lightgray;
        text-indent:10px;
    }

#menucon ul {
    list-style-type: none;
}

#menucon ul li {
   display: inline-block;
}

 #menucon ul li a {
    color: orangered;
    text-decoration: none;
}

#menucon ul li a:hover {
   color: black;
   text-decoration: underline;
}

</style>



<div style="margin:100px 12%; font-size:15px">
    <div class="container">
        <div class="row" id="menucon" style="padding:8px 0px 0px 0px">
            <ul class="d-flex align-items-center">
                <li>@Html.ActionLink("Trang chủ  ", "Index", "Home")<span style="color:orangered">&nbsp ></span></li>
                <li class="active">
                    @Html.ActionLink("Đơn hàng của bạn  ", "Index", "Bill")<span style="color:orangered">&nbsp ></span>
                </li>
                <li class="active">
                    @Html.ActionLink("Đơn hàng chi tiết ", "Details", "Bill", new { id = hoadon.MaHD })
                </li>
            </ul>
        </div>
        <div class="row" style="padding:10px">
            <div class="col-lg-5 col-md-5 border rounded" style="background-color: gainsboro; padding: 0px; max-height:300px">
                <h2 class="border btn-light" style="border: 1px solid; padding:15px; background-color:black; color:white">Thông tin giao hàng</h2>
                <div style="padding: 10px 15px">
                    <p>Họ và tên người nhận: @hoadon.HoTenNguoiNhan</p>
                    <p>Email người nhận: @hoadon.EmailNguoiNhan</p>
                    <p>Số điện thoại người nhận: @hoadon.SDTNguoiNhan</p>
                    <p>Địa chỉ người nhận: @hoadon.DiaChiNhan</p>
                    <p>Ghi chú: @hoadon.GhiChu</p>
                </div>
                @if (hoadon.TrangThai == "Đang chuẩn bị")
                {
                    <div style="padding: 10px 15px; text-align:center">
                        <button type="button" id="update" class="btn" data-bs-toggle="modal" data-bs-target="#myModal">
                            Cập nhật thông tin giao hàng
                        </button>
                    </div>
                }
            </div>

            <!-- The Modal -->
            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)

                            <div style="padding: 10px 15px">
                                <label>Họ và tên:</label>
                                <input type="text" style="font-size:15px" class="form-control" id="username" name="name" value="@hoadon.HoTenNguoiNhan" required>

                            </div>
                            <div style="padding:10px 15px">
                                <label>Email:</label><br />
                                <input type="email" style="font-size:15px" class="form-control " id="email" name="email" value="@hoadon.EmailNguoiNhan" required>
                            </div>
                            <div style="padding: 10px 15px">
                                <label>Số điện thoại:</label>
                                <input type="text" style="font-size:15px" class="form-control" id="phone" name="phone" value="@hoadon.SDTNguoiNhan" required>

                            </div>
                            <div style="padding: 10px 15px">
                                <label>Địa chỉ giao hàng:</label>
                                <input type="text" style="font-size:15px" class="form-control" id="address" name="address" value="@hoadon.DiaChiNhan" required>

                            </div>
                            <div style="padding: 10px 15px">
                                <label>Ghi chú:</label>
                                <textarea class="form-control" style="font-size:15px" id="note" name="note" rows=5>@hoadon.GhiChu</textarea>
                            </div>
                            <div style="padding: 20px 15px;text-align:center">
                                <button type="submit" style="font-size:15px" class="btn btn-success w-100">Cập nhật</button>
                            </div>
                        }

                    </div>
                </div>
            </div>

            <div class="col-lg-1 col-md-1">
            </div>
            <div class="col-lg-6 col-md-6">
                <h2 style="margin-bottom:40px; padding-top:20px"><b>Đơn hàng của bạn</b></h2>
                <div class="your-order-table table-responsive">
                    @foreach (var item in Model)
                    {
                        tongtien = tongtien + @item.Gia * @item.SoLuong;
                        <div style="width:100%;clear:both">
                            <div style="float: left; width:30%">
                                @{
                                    string ImagePath = "~/wwwroot/Images/" + @item.ChiTietSanPham.AnhMoTa.HinhAnh;
                                } <img src="@Url.Content(ImagePath)" width="150" height="150" class="img-thumbnail" />
                            </div>
                            <div style="float: left; width:65%">
                                <h4><b>@item.ChiTietSanPham.AnhMoTa.SanPham.TenSP</b></h4>
                                <p>Size: @item.KichCo</p>
                                <p>Gía bán: @String.Format("{0:0,0}", item.Gia)</p>
                            </div>
                            <div style="float: left; text-align:right"><b>X @item.SoLuong</b></div>
                        </div>
                        <div class="mb-5" style="width:100%;clear:both;">
                            <hr />
                        </div>
                    }
                    <div>
                        <h5 colspan="6" style="text-align:right">
                            <b style="font-size:20px; color:red">Tổng tiền:<span>&nbsp</span>@String.Format("{0:0,0}", tongtien)<span>&nbsp VNĐ</span></b>
                        </h5>
                    </div>
                    </>

                </div>
            </div>
        </div>
    </div>
</div>




