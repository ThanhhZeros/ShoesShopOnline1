        </div>




        <div class="content-top">
            <h1>TOP NHỮNG SẢN PHẨM MỚI NHẤT</h1>

            <div class="grid-in">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 grid-top" data-aos="zoom-in">
                        <a href="@Url.Action("ProductDetail","Product", new { id = item.MaSP, maImage = item.maAnh,madm = item.MaDM })" class="b-link-stripe b-animate-go  thickbox">
                            @{
                                string filePath = "~/wwwroot/images/" + item.Anh;
                            }
                            <img class="img-responsive"
                                 src="@Url.Content(filePath)" alt="">
                            <div class="sale">
                                <p>GIẢM 20%</p>
                            </div>
                        </a>

                        <div class="name">
                            <h3><a href="single.html">@item.TenSP</a></h3>
                            <div class="cost-product">
                                <span></span><b>@item.GiaBan<u>đ</u></b>
                            </div>
                        </div>
                    </div>
                }

                <div class="clearfix"> </div>
            </div>
        </div>

